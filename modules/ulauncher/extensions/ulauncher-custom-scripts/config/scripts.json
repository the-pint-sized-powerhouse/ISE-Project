[
  {
    "name": "Hyprshot Monitor",
    "description": "Screenshots entire monitor",
    "icon": "~/.local/share/ulauncher/extensions/ulauncher-custom-script/images/screenshot-icon.png",
    "script": "hyprshot -m output -o ~/Pictures/Screenshots",
    "default_arguments": [
      "~/.config/ulauncher/scripts.json"
    ]
  },
  {
    "name": "Hyprshot Window",
    "description": "Screenshots a given window",
    "icon": "~/.local/share/ulauncher/extensions/ulauncher-custom-script/images/screenshot-icon.png",
    "script": "hyprshot -m window -o ~/Pictures/Screenshots",
    "default_arguments": [
      "~/.config/ulauncher/scripts.json"
    ]
  },
  {
    "name": "Hyprshot Region",
    "description": "Screenshots a selected area",
    "icon": "~/.local/share/ulauncher/extensions/ulauncher-custom-script/images/screenshot-icon.png",
    "script": "hyprshot -m region -o ~/Pictures/Screenshots",
    "default_arguments": [
      "~/.config/ulauncher/scripts.json"
    ]
  }
]
